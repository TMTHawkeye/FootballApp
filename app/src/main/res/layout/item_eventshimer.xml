<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <!-- Event Time Shimmer -->
        <View
            android:id="@+id/shimmerEventTime"
            android:layout_width="32dp"
            android:layout_height="14dp"
            android:background="@drawable/shimmer_bg"
            android:layout_marginEnd="16dp" />

        <!-- Event Icon Shimmer -->
        <View
            android:id="@+id/shimmerEventIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shimmer_bg"
            android:layout_marginEnd="16dp" />

        <!-- Team Logo Shimmer -->
        <View
            android:id="@+id/shimmerTeamLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shimmer_bg"
            android:layout_marginEnd="16dp" />

        <!-- Event Details Shimmer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Event Type Shimmer -->
            <View
                android:id="@+id/shimmerEventType"
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:background="@drawable/shimmer_bg"
                android:layout_marginBottom="4dp" />

            <!-- Event Description Shimmer -->
            <View
                android:id="@+id/shimmerEventDescription"
                android:layout_width="120dp"
                android:layout_height="12dp"
                android:background="@drawable/shimmer_bg" />

        </LinearLayout>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>