<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    tools:context=".fragments.boardingfragments.FirstOnBoardingFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ob_1_img"
        app:layout_constraintDimensionRatio="1.8:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/ob_1_title"
        style="@style/title_text_style"
         android:gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintBottom_toTopOf="@+id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_vp"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc"
        style="@style/normal_text_style"
        android:layout_width="0dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginHorizontal="@dimen/_20sdp"

        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/ob_1_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />





</androidx.constraintlayout.widget.ConstraintLayout>