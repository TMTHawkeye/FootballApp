<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="10dp"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Player Image Placeholder -->
        <View
            android:id="@+id/shimmer_ivPlayer"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Player Name Placeholder -->
        <View
            android:id="@+id/shimmer_tvPlayerName"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintStart_toEndOf="@id/shimmer_ivPlayer"
            app:layout_constraintTop_toTopOf="@id/shimmer_ivPlayer"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_ivPlayer"
            app:layout_constraintEnd_toStartOf="@id/shimmer_tvPlayerNumber" />

        <!-- Player Number Placeholder -->
        <View
            android:id="@+id/shimmer_tvPlayerNumber"
            android:layout_width="40dp"
            android:layout_height="12dp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/shimmer_ivPlayer"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_ivPlayer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
