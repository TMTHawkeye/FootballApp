<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/transparent"


    tools:ignore="NamespaceTypo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            app2:shapeAppearance="@style/RoundedImageView1"
            android:id="@+id/ivNewsImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/light_grey"

            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toEndOf="@+id/ivNewsImage"
            app2:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="News Title"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_14ssp"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:text="News description goes here with some details about the news article..."
                android:textColor="@color/grey"
                android:textSize="@dimen/_10ssp"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@+id/tvNewsTitle" />

            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/montserrat"
                app2:layout_constraintTop_toBottomOf="@+id/tvNewsDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>