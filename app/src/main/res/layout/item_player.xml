<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/_4sdp"
    android:background="@color/transparent"

    android:layout_marginBottom="8dp">

    <!-- Player Image -->
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/RoundedImageView1"
        android:id="@+id/ivPlayer"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/wbenizth"
        app:layout_constraintBottom_toTopOf="@+id/divider"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:background="@color/grey1"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@+id/ivPlayer"
        app:layout_constraintEnd_toEndOf="@+id/tvPlayerNumber"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayer"/>


    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/player"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tvPlayerNumber"
        android:layout_marginHorizontal="@dimen/_8sdp"

        app:layout_constraintTop_toTopOf="@id/ivPlayer"
        app:layout_constraintBottom_toBottomOf="@id/ivPlayer"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"
        tools:layout_editor_absoluteY="16dp" />






            <TextView
                android:id="@+id/tvPlayerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat"

                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/ivPlayer"
                app:layout_constraintBottom_toBottomOf="@id/ivPlayer"
                android:layout_marginEnd="@dimen/_12sdp"

                android:gravity="center"
                android:padding="4dp" />












</androidx.constraintlayout.widget.ConstraintLayout>