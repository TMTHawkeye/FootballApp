<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerVideoPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Video Player Placeholder -->
        <View
            android:id="@+id/shimmerPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Container (title + description) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shimmerInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/shimmerBtnShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/shimmerBtnShare"
            app:layout_constraintTop_toTopOf="@+id/shimmerBtnShare">

            <!-- Title -->
            <View
                android:id="@+id/shimmerTitle"
                android:layout_width="140dp"
                android:layout_height="@dimen/_14ssp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/shimmer_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Description -->
            <View
                android:id="@+id/shimmerDescription"
                android:layout_width="200dp"
                android:layout_height="@dimen/_10ssp"
                android:background="@drawable/shimmer_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmerTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Like Button -->
        <View
            android:id="@+id/shimmerBtnLike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintBottom_toTopOf="@+id/shimmerLikesCount"
            app:layout_constraintEnd_toEndOf="@+id/shimmerBtnShare" />

        <!-- Likes Count -->
        <View
            android:id="@+id/shimmerLikesCount"
            android:layout_width="32dp"
            android:layout_height="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintBottom_toTopOf="@+id/shimmerBtnShare"
            app:layout_constraintEnd_toEndOf="@+id/shimmerBtnShare"
            app:layout_constraintStart_toStartOf="@+id/shimmerBtnShare" />

        <!-- Share Button -->
        <View
            android:id="@+id/shimmerBtnShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintBottom_toTopOf="@+id/shimmerShareCount"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Share Count -->
        <View
            android:id="@+id/shimmerShareCount"
            android:layout_width="32dp"
            android:layout_height="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shimmerBtnShare"
            app:layout_constraintStart_toStartOf="@+id/shimmerBtnShare" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
