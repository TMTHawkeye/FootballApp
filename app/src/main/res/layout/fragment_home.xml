<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <!-- Date Selector -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/autour_one"
                android:text="@string/footbalnow"


                android:textColor="@color/green_color"

                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"

                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/settings"
                app:layout_constraintBottom_toBottomOf="@+id/title"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_history"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"

                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/refresh"

                app:layout_constraintBottom_toBottomOf="@+id/btn_setting"
                app:layout_constraintEnd_toStartOf="@+id/btn_setting"
                app:layout_constraintTop_toTopOf="@+id/btn_setting" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"

                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/search"

                app:layout_constraintBottom_toBottomOf="@+id/btn_history"
                app:layout_constraintEnd_toStartOf="@+id/btn_history"
                app:layout_constraintTop_toTopOf="@+id/btn_history" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:drawableStart="@drawable/warning"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/livematches"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/datesRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/datesRecyclerView" />


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/textView3shimmer"
            android:layout_width="0dp"
            android:background="@drawable/shimmer_bg"
            android:layout_height="@dimen/_12sdp"
              app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"/>


        <TextView
            android:id="@+id/seeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/montserrat"
            android:text="@string/see_all_underlined"
            android:textColor="@color/grey"


            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"

            app:layout_constraintEnd_toEndOf="@+id/datesRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/datesRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/datesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading"
            tools:itemCount="10"

            tools:listitem="@layout/item_date" />

        <!-- Match Slider with FIXED height container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"

            android:layout_height="190dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/datesRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/datesRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/matchSliderViewPager"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_slider_shimmer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    layout="@layout/item_match_slidershimer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView

                android:id="@+id/btnPrevious"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"

                android:layout_marginEnd="@dimen/_6sdp"
                android:background="@drawable/forwardarrow"
                android:foregroundGravity="center"

                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="@+id/btnNext"
                app:layout_constraintEnd_toStartOf="@+id/btnNext"
                app:layout_constraintTop_toTopOf="@+id/btnNext" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="@dimen/_25sdp"

                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"

                android:foregroundGravity="center"
                android:src="@drawable/forwardarrow"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Other Matches -->
        <TextView
            android:id="@+id/matches_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/other_today_s_matches"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintStart_toStartOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/matches_heading_tvshimmer"
            android:layout_width="0dp"
            android:background="@drawable/shimmer_bg"
            android:layout_height="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/matches_heading_tv"
            app:layout_constraintTop_toTopOf="@+id/matches_heading_tv"
            app:layout_constraintEnd_toEndOf="@id/matches_heading_tv"
            app:layout_constraintBottom_toBottomOf="@+id/matches_heading_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/matchesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/matches_heading_tv"
            tools:itemCount="10"
            tools:listitem="@layout/item_match_list" />


        <LinearLayout
            android:id="@+id/ct_shimmers"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"

            android:visibility="visible"

            app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/matches_heading_tv">


            <include layout="@layout/item_match_listshimer" />

            <include layout="@layout/item_matchshimer" />

            <include layout="@layout/item_match_listshimer" />

            <include layout="@layout/item_matchshimer" />

            <include layout="@layout/item_match_listshimer" />

            <include layout="@layout/item_matchshimer" />

            <include layout="@layout/item_matchshimer" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>