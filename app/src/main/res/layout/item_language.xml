<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_3sdp"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/cd_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/grey"
        app:cardBackgroundColor="@color/transparent_bg1"
        app:strokeWidth="2dp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@color/transparent"
            android:paddingHorizontal="@dimen/_8sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_country"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCountryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Country Name"
                app:layout_constraintStart_toEndOf="@+id/iv_country"
                app:layout_constraintTop_toTopOf="@id/iv_country"
                app:layout_constraintBottom_toTopOf="@+id/tv_selectCountryName"
                style="@style/normal_text_style"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/outfit"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_selectCountryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Country"
                android:visibility="gone"
                android:autoSizeMaxTextSize="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@+id/tvCountryName"
                app:layout_constraintTop_toBottomOf="@+id/tvCountryName"
                 app:layout_constraintBottom_toBottomOf="@id/iv_country"
                style="@style/normal_text_style"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"/>


            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_btn"
                android:padding="0dp"
                android:buttonTint="#4EAC82"
                 android:checked="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>