<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/newsSliderViewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clipToPadding="false"
                android:background="@color/light_grey"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/splshGrdient"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:src="@drawable/bggg1"
                app:layout_constraintBottom_toBottomOf="@id/newsSliderViewPager"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/_8sdp"

                app:ci_drawable="@drawable/indicator_selector"
                app:ci_drawable_unselected="@drawable/indicator_default"
                app:ci_height="8dp"
                app:ci_margin="4dp"
                app:ci_width="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/newsSliderViewPager"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/indicatorShimmer"
                android:background="@drawable/shimmer_bg"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="@+id/indicator"
                app:layout_constraintStart_toStartOf="@+id/indicator"
                app:layout_constraintTop_toTopOf="@+id/indicator"
                app:layout_constraintEnd_toEndOf="@+id/indicator"/>

            <!-- News Title and Date -->

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/news"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/textView4Shimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shimmer_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4" />


            <ImageView
                android:id="@+id/refreshNews"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_bold"
                android:src="@drawable/refresh"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/refreshNewsShimmer"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/shimmer_bg"
                android:fontFamily="@font/montserrat_bold"
                android:src="@drawable/refresh"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/breaking_news_headline"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator"
                app:layout_constraintEnd_toStartOf="@+id/indicator"
                app:layout_constraintStart_toStartOf="parent" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/tvNewsTitleShimmer"
                android:layout_width="0dp"
                android:layout_height="18sp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/shimmer_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/indicator"
                app:layout_constraintEnd_toStartOf="@+id/indicator"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/september_12_2023"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/newsSliderViewPager"
                app:layout_constraintEnd_toStartOf="@+id/indicator"
                app:layout_constraintStart_toStartOf="@+id/tvNewsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsTitle" />

            <TextView
                android:id="@+id/tvNewsDateShimmer"
                android:layout_width="0dp"
                android:layout_height="12sp"
                android:layout_marginBottom="@dimen/_8sdp"

                app:layout_constraintBottom_toBottomOf="@id/newsSliderViewPager"
                app:layout_constraintEnd_toStartOf="@+id/indicator"
                app:layout_constraintStart_toStartOf="@+id/tvNewsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsTitle" />


            <!-- Latest News Section -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/latest_news"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newsSliderViewPager" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/textView2Shimmer"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12ssp"
                android:background="@drawable/shimmer_bg"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/latest_news"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newsSliderViewPager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLatestNews"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:padding="16dp"
                tools:itemCount="10"
                tools:listitem="@layout/item_latest_news"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <LinearLayout
                android:id="@+id/rvLatestNewsShimmer"
                android:visibility="gone"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@+id/rvLatestNews"
                app:layout_constraintEnd_toEndOf="@+id/rvLatestNews"
                app:layout_constraintTop_toTopOf="@+id/rvLatestNews"
                app:layout_constraintBottom_toBottomOf="@+id/rvLatestNews"
                android:orientation="vertical">

                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
                <include layout="@layout/item_news_shimmer"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
