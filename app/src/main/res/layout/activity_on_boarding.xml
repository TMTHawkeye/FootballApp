<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.onboarding.OnBoardingActivity"
    android:background="@drawable/onboarding_bg">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_skip"
        android:text="@string/skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_15sdp"
        style="@style/normal_text_style"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="@dimen/_12sdp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_onboarding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_skip"
        app:layout_constraintBottom_toTopOf="@+id/dots_indicator"
        />


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/grey"
        app:dotsCornerRadius="@dimen/_6sdp"
        app:dotsSize="@dimen/_8sdp"
        app:dotsSpacing="@dimen/_2sdp"
        app:dotsWidthFactor="2"
        app:selectedDotColor="@color/white"
        app:progressMode="false"

        android:layout_marginBottom="@dimen/_15sdp"

        app:layout_constraintStart_toStartOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="@id/btnNext"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
         android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/normal_text_style"
        android:fontFamily="@font/outfit"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:backgroundTint="@null"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/button_gradient_bg"
        app:cornerRadius="@dimen/_10sdp"
        android:textAllCaps="false"
        app:iconTint="@android:color/white"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>