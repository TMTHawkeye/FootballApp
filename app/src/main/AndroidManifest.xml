<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl"
        android:theme="@style/Theme.FootballApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.onboarding.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.SearchHomeActivity"
            android:exported="false" />
        <activity
            android:name=".VideoPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AllMatchesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MatchDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.LeagueDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.TeamDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.NewsDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.ExitScreen"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.OnBoardingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.onboarding.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>